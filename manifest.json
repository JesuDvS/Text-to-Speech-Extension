{
  "name": "Lector de Texto Offline",
  "description": "Lee texto seleccionado en voz alta sin conexi√≥n a internet",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": "text-to-speech-icon.png",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}